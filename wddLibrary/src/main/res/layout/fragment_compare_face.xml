<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CompareFaceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:weightSum="9">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:id="@+id/wdd_iv_cameramatching_picture"
                    android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="3"
                   android:layout_gravity="center"
                   android:id="@+id/wdd_tv_cameramatching_picture_result"
                   android:text="Matching Percentage"
                   android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:id="@+id/wdd_iv_imagematching_picture"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

</FrameLayout>