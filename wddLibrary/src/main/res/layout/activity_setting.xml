<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroungColor"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/wdd_setting_first_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="8">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Setting"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/wdd_tv_save_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="save"
            android:textSize="20sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_below="@+id/wdd_setting_first_container"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wdd_tv_facialMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="FACIALMATCH">

            </TextView>

            <SeekBar
                android:id="@+id/wdd_SeekBar_face"
                android:splitTrack="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="10dp"
                android:minWidth="15dp"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:progress="0"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_thumb" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wdd_tv_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ID">

            </TextView>

            <SeekBar
                android:id="@+id/wdd_SeekBar_id"
                android:splitTrack="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="10dp"
                android:minWidth="15dp"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:progress="0"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_thumb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wdd_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="INFO">

            </TextView>

            <SeekBar
                android:id="@+id/wdd_SeekBar_info"
                android:splitTrack="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="10dp"
                android:minWidth="15dp"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:progress="0"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_thumb"/>

        </LinearLayout>


    </LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:id="@+id/wdd_tv_position"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="positon"
    android:layout_marginBottom="220dp">

</TextView>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:switchMinWidth="56dp"
       />



    <Button
        android:id="@+id/wdd_btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="colorPicker">


    </Button>

</RelativeLayout>